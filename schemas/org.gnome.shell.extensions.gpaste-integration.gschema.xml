<?xml version="1.0" encoding="UTF-8"?>
<schemalist gettext-domain="gnome-shell-extensions">

  <schema path="/org/gnome/shell/extensions/gpaste-integration/" id="org.gnome.shell.extensions.gpaste-integration">

    <key type="i" name="width-percents">
        <default>50</default>
    </key>

    <key type="i" name="height-percents">
        <default>100</default>
    </key>

    <key type="i" name="preview-max-width-px">
        <default>700</default>
    </key>

    <key type="i" name="preview-max-height-px">
        <default>500</default>
    </key>

    <key type="i" name="preview-min-width-px">
        <default>300</default>
    </key>

    <key type="as" name="show-clipboard-contents">
      <default><![CDATA[['<Super>Z']]]></default>
    </key>

    <key type="b" name="enable-shortcuts">
      <default>false</default>
    </key>

    <key type="b" name="enable-animations">
        <default>true</default>
    </key>

    <key type="d" name="open-animation-time">
        <default>0.5</default>
    </key>

    <key type="d" name="close-animation-time">
        <default>0.5</default>
    </key>

    <key type="s" name="open-transition-type">
        <default>'easeOutBack'</default>
    </key>

    <key type="s" name="close-transition-type">
        <default>'easeInBack'</default>
    </key>

    <key type="b" name="enable-item-info">
      <default>true</default>
    </key>

    <key type="b" name="enable-image-preview">
      <default>true</default>
    </key>

    <key type="i" name="item-info-timeout">
        <default>700</default>
    </key>

  </schema>
</schemalist>
