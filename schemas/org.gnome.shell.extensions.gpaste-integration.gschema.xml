<?xml version="1.0" encoding="UTF-8"?>
<schemalist gettext-domain="gnome-shell-extensions">

  <schema path="/org/gnome/shell/extensions/gpaste-integration/" id="org.gnome.shell.extensions.gpaste-integration">

    <key type="i" name="width-percents">
        <default>50</default>
    </key>

    <key type="i" name="height-percents">
        <default>100</default>
    </key>

    <key type="i" name="preview-max-width-px">
        <default>700</default>
    </key>

    <key type="i" name="preview-max-height-px">
        <default>500</default>
    </key>

    <key type="i" name="preview-min-width-px">
        <default>350</default>
    </key>

    <key type="i" name="preview-image-max-width">
        <default>350</default>
    </key>

    <key type="i" name="preview-image-max-height">
        <default>350</default>
    </key>

    <key type="as" name="show-clipboard-contents">
      <default><![CDATA[['<Super>Z']]]></default>
    </key>

    <key type="as" name="quick-mode">
      <default><![CDATA[['<Super>Q']]]></default>
    </key>

    <key type="as" name="show-pinned-items">
      <default><![CDATA[['<Super><Shift>Q']]]></default>
    </key>

    <key type="b" name="enable-shortcuts">
      <default>true</default>
    </key>

    <key type="b" name="enable-animations">
        <default>true</default>
    </key>

    <key type="d" name="open-animation-time">
        <default>0.5</default>
    </key>

    <key type="d" name="close-animation-time">
        <default>0.5</default>
    </key>

    <key type="d" name="activate-animation-time">
        <default>0.3</default>
    </key>

    <key type="s" name="open-transition-type">
        <default>'easeOutBack'</default>
    </key>

    <key type="s" name="close-transition-type">
        <default>'easeInBack'</default>
    </key>

    <key type="s" name="activate-transition-type">
        <default>'easeInExpo'</default>
    </key>

    <key type="b" name="enable-image-preview">
      <default>true</default>
    </key>

    <key type="i" name="item-info-timeout">
        <default>700</default>
    </key>

    <key type="i" name="item-info-mode">
        <default>4</default>
    </key>

    <key type="b" name="enable-tooltips">
        <default>true</default>
    </key>

    <key type="b" name="enable-color-marks">
        <default>true</default>
    </key>

    <key type="as" name="pinned-items">
        <default>[]</default>
    </key>

    <key type="b" name="enable-color-indication">
        <default>true</default>
    </key>

    <key type="b" name="enable-preview-on-hover">
        <default>true</default>
    </key>

    <key type="i" name="preview-on-hover-timeout">
        <default>400</default>
    </key>

    <key type="b" name="preview-item-on-hover">
      <default>true</default>
    </key>

  </schema>
</schemalist>
